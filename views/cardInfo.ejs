<%- include ("./partials/header.ejs") %>


<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 600px; min-height: 700px;">
      <!-- Top area -->
      <div class="position-relative bg-light text-center py-5">             
        <img src="<%=pokemon.sprites.front_default%>" 
             alt="Pokemon silhouette" 
             class="z-1" 
             width="160" height="160" />
            
        <h1 class="position-absolute top-0 start-50 translate-middle-x mt-3 fs-4 fw-bold text-dark">
          <%=pokemon.name%>
        </h1>
        <span class="position-absolute top-0 end-0 mt-3 me-3 fw-bold text-dark">
          #<%=pokemon.id%>
        </span>
      </div>
  
      <!-- Content area -->
      <div class="card-body">
        <div class="d-flex justify-content-center gap-3 mb-4">
          <% for(let i = 0; i < pokemon.types.length; i++) { %>
            <span class="badge px-4 py-2 type-<%= pokemon.types[i].type.name %>">
              <%= pokemon.types[i].type.name %>
            </span>
          <% } %>
        </div>
      </div>
      
  
        <h5 class="text-muted text-center mb-4 pe-4 ps-4"><%= pokemon.dexEntry %></h5>
  
        <div class="d-flex justify-content-between text-center text-muted mb-4">
          <div class="border-end px-3 flex-fill">
            <i class="fas fa-weight-hanging mb-2"></i>
            <div class="fw-semibold"><%= pokemon.weight %> kg</div>
            <small>Weight</small>
          </div>
          <div class="border-end px-3 flex-fill">
            <i class="fas fa-ruler-vertical mb-2"></i>
            <div class="fw-semibold"><%= pokemon.height  %> m</div>
            <small>Height</small>
          </div>
          <div class="px-3 flex-fill text-start">
            <% for(let i = 0; i < pokemon.abilities.length; i++) { %>
              <div class="fw-semibold"><%= pokemon.abilities[i].ability.name %></div>
            <% } %>
            <small>Habilities</small>
          </div>
        </div>
    
        <h5 class="text-muted text-center mb-4">Base Stats</h5>
          <div class="d-flex align-items-center mb-3 pt-1 pe-4 ps-4">
            <span class="me-3" style="width: 50px;">HP </span>
            <span class="fw-semibold me-2"><%= pokemon.stats[0].base_stat %></span>
            <div class="progress flex-fill" style="height: 10px;">
              <div class="progress-bar bg-success" style="width: <%= pokemon.stats[0].base_stat %>%;"></div>
            </div>
          </div>
          <div class="d-flex align-items-center mb-3 pt-1 pe-4 ps-4">
            <span class="me-3" style="width: 50px;">ATK </span>
            <span class="fw-semibold me-2"><%= pokemon.stats[1].base_stat %></span></span>
            <div class="progress flex-fill" style="height: 10px;">
              <div class="progress-bar bg-danger" style="width: <%= pokemon.stats[1].base_stat %>%;"></div>
            </div>
          </div>
          <div class="d-flex align-items-center mb-3 pt-1 pe-4 ps-4">
            <span class="me-3" style="width: 50px;">DEF</span>
            <span class="fw-semibold me-2"><%= pokemon.stats[2].base_stat %></span></span>
            <div class="progress flex-fill" style="height: 10px;">
              <div class="progress-bar bg-warning" style="width: <%= pokemon.stats[2].base_stat %>%;"></div>
            </div>
          </div>
          <div class="d-flex align-items-center mb-3 pt-1 pe-4 ps-4">
            <span class="me-3" style="width: 50px;">SATK</span>
            <span class="fw-semibold me-2"><%= pokemon.stats[3].base_stat %></span></span>
            <div class="progress flex-fill" style="height: 10px;">
              <div class="progress-bar bg-primary" style="width: <%= pokemon.stats[3].base_stat %>%;"></div>
            </div>
          </div>
          <div class="d-flex align-items-center mb-3 pt-1 pe-4 ps-4">
            <span class="me-3" style="width: 50px;">SDEF</span>
            <span class="fw-semibold me-2"><%= pokemon.stats[4].base_stat %></span></span>
            <div class="progress flex-fill" style="height: 10px;">
              <div class="progress-bar bg-secondary" style="width: <%= pokemon.stats[4].base_stat %>%;"></div>
            </div>
          </div>
          <div class="d-flex align-items-center mb-3 pt-1 pe-4 ps-4">
            <span class="me-3" style="width: 50px;">VEL</span>
            <span class="fw-semibold me-2"><%= pokemon.stats[5].base_stat %></span></span>
            <div class="progress flex-fill" style="height: 10px;">
              <div class="progress-bar bg-info" style="width: <%= pokemon.stats[5].base_stat %>%;"></div>
            </div>
          </div>
      </div>
    </div>
  </div>
  






<%- include ("./partials/footer.ejs") %>